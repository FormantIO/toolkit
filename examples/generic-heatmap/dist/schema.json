{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://formant.io/toolkit/examples/generic-heatmap/schema.json",
  "title": "Heatmap",
  "description": "Graphical representation of data ingested in Formant",
  "type": "object",
  "properties": {
    "mapboxKey": {
      "title": "Mapbox key",
      "type": "string"
    },
    "locationStream": {
      "type": "string",
      "description": "Formant's location stream name"
    },
    "numericStream": {
      "type": "string",
      "description": "Formant's numeric stream name"
    },
    "start": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["timeRange", "Event"]
        },
        "value": {
          "type": "string",
          "title": "Event Name",
          "$formant.visible.when": ["type", "=", "Event"]
        },
        "hours": {
          "type": "number",
          "$formant.visible.when": ["type", "=", "timeRange"]
        }
      }
    },
    "end": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "title": "Event Name",
          "enum": ["timeRange", "Event", "Annotation", "scrubber"]
        },
        "value": {
          "type": "string",
          "$formant.visible.when": ["type", "=", "Event"]
        },
        "hours": {
          "type": "number",
          "$formant.visible.when": ["type", "=", "timeRange"]
        }
      }
    },

    "longitude": {
      "type": "number"
    },
    "latitude": {
      "type": "number"
    },
    "zoom": {
      "type": "integer",
      "description": "Zoom in center of map"
    },
    "maxSecondsBetweenDatapoints": {
      "title": "Valid time offset",
      "type": "integer",
      "description": "Max time allow between numeric and location datapoins"
    },
    "distinctZoomLevel": {
      "title": "Distinct zoom level",
      "type": "integer"
    },
    "circleRadius": {
      "title": "Circle radius (px)",
      "type": "integer"
    },
    "tooltipLabel": {
      "title": "Tooltip Label",
      "type": "string"
    }
  }
}
