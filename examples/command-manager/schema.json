{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://formant.io/toolkit/examples/command-manager/schema.json",
  "title": "Command Manager",
  "description": "Command manager configuration.",
  "type": "object",
  "properties": {
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "enabledParameters": {
            "type": "boolean"
          },
          "useStreamValue": {
            "$formant.visible.when": ["enabledParameters", "=", true],
            "title": "CSV from a text stream",
            "type": "boolean"
          },
          "streamName": {
            "$formant.visible.when": ["useStreamValue", "=", true],
            "type": "string",
            "$formant.streams.byType": "text"
          }
        }
      }
    },
    "buttons": {
      "type": "array",
      "title": "Real-time Buttons",
      "items": {
        "type": "object",
        "properties": {
          "streamName": {
            "type": "string"
          }
        }
      }
    }
  }
}
