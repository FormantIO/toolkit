{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "downlevelIteration": true,
    "outDir": "dist/types"
  },
  "include": [
    "src/main.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx"
  ]
}